# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Convex Database
NEXT_PUBLIC_CONVEX_URL=https://your-convex-deployment-url.convex.cloud

# Google AI (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Cohere API for Embeddings
# Get this from: https://dashboard.cohere.com/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Supabase PostgreSQL Database for RAG
# Get this from: Supabase Dashboard > Project Settings > Database > Connection String (URI mode)
# Format: postgresql://postgres.xxxxxxxxxxxx:[YOUR-PASSWORD]@aws-0-[region].pooler.supabase.com:6543/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-HOST]:6543/postgres

# Manim Video Generation Server
# For local development: http://localhost:5002
# For production: Your deployed Manim server URL
NEXT_PUBLIC_MANIM_API_URL=http://localhost:5002